{
  "declaration": true,
  "compilerOptions": {
    "target": "ES5",
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./srcts/types",
    "emitDeclarationOnly": true,
    // Tell TS to not use NodeJS types; only use browser types, like for setTimeout
    "types": [],
    "strict": false
  },
  "include": [
    "srcts/src/index.ts",
    "srcts/src/**/*.ts",
    "srcts/extras/globalShiny.ts"
  ],
  "exclude": [
    "node_modules",
    "srcts/types/",
    "**/__tests__"
  ]
}
